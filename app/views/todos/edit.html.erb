<div class="container">
  <div class="panel panel-default">
    <div class="panel-heading"><h3>My List</h3></div>
      <div class="panel-body">
        <%= form_for @todo do |f| %>
          <table>
            <table class="table table-striped table-bordered">
              <thead>
                <tr>
                  <th>Description</th>
                  <th>Days left</th>
                  <th>Completed?</th>
                </tr>
              </thead>
              <tbody>
                <% @todos.each do |user| %>
                  <tr>
                    <td><%= todo.title %></td>
                    <td><%= todo.days.left %></td>
                    <td><%= link_to "Done", todo_path(todo), method: :delete, data: { confirm: "Are you sure?" } %></td>
                  </tr>
                 <% end %>
              </tbody>
            </table>
          </table>
        <% end %>
      </div>
    </div>
  </div>
</div>


