<div class="container">
  <div class="panel panel-default">
    <div class="panel-heading"><h3>My List</h3></div>
      <div class="panel-body">
          <table>
            <table class="table table-bordered table-hover">
              <thead>
                <tr>
                  <th>Description</th>
                  <th>Days left</th>
                  <th>Completed?</th>
                </tr>
              </thead>
              <tbody>
                <% @todos.each do |todo| %>
                  <tr>
                    <td><%= todo.title %></td>
                    <td><%= todo.days_left %></td>
                    <td><%= link_to "Done", todo_path(todo), method: :delete, data: { confirm: "Are you sure?" }, class: 'text-warning' %></td>
                  </tr>
                 <% end %>
              </tbody>
            </table>
          </table>
      </div>
    </div>
  </div>
</div>
<row>
  <div class="container">
    <div class="span3"><%= link_to "Create New Todo", new_todo_path, class: 'btn btn-large btn-primary btn-block' %>
    </div>
    <div class="span9">
    </div>
  </div>
</div>

